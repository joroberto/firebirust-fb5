# Firebird connection settings
# Copy this file to .env and adjust as needed

FB_HOST=localhost
FB_PORT=3050
FB_USER=SYSDBA
FB_PASSWORD=masterkey

# Database path (use /tmp for local testing, or an absolute path)
# The Firebird server user needs write access to this location
FB_DATABASE=/tmp/firebirust_demo.fdb

# Authentication plugin (Srp256, Srp, Legacy_Auth)
# Default: Srp256 (recommended for Firebird 4+)
FB_AUTH_PLUGIN=Srp256
